{
    "compilerOptions": {
        "declaration": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "target": "es5",
        "module": "esnext",
        "rootDir": "src",
        "baseUrl": "src",
        "outDir": "lib",
        "typeRoots": [
            "src/definitions",
            "node_modules/@types"
        ]
    },
    "include": [
        "src",
        "src/definitions"
    ]
}