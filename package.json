        "ts-jest": "^23.10.0",
        "tslib": "^1.9.3",
        "tslint": "^5.11.0",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-microsoft-contrib": "^5.2.1",
        "tslint-plugin-prettier": "^1.3.0",
        "typescript": "^3.0.3",
        "vrsource-tslint-rules": "^5.8.2"
    },
    "lint-staged": {
